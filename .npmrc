# NPM Configuration for Azure Deployment

# Reduce verbosity to suppress tar warnings
loglevel=error

# Use offline mode when possible
prefer-offline=true

# Skip audit to speed up installs
audit=false

# Increase timeout for slow connections
fetch-timeout=300000

# Disable optional dependencies that might cause issues
optional=false

# Use legacy peer deps to avoid conflicts
legacy-peer-deps=true

# Disable progress to reduce log noise
progress=false

# Disable update notifier
update-notifier=false
